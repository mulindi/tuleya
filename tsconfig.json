{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true
  },
  "allowJs": true,
  "moduleResolution": "node",
  "resolveJsonModule": true,
  "isolatedModules": true,
  "baseUrl": "./",
  "paths": {
    "@/components": [
      "src/components"
    ],
    "@/types": [
      "src/types"
    ],
    "@/screens": [
      "src/screens"
    ],
    "@/assets": [
      "src/assets"
    ],
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
  ],
  "exclude": [
    "node_modules",
  ]
}